{
  "name": "@croquet/croquet",
  "version": "1.1.0-4",
  "description": "Live Collaboration for Static Web Apps by Running Server Code in Client",
  "keywords": [
    "croquet",
    "multiplayer",
    "multiuser",
    "collaboration",
    "realtime",
    "online",
    "client",
    "server",
    "networking",
    "multi-player",
    "multi-user",
    "real-time"
  ],
  "browser": "cjs/croquet-croquet.js",
  "main": "cjs/croquet-croquet-node.js",
  "types": "types.d.ts",
  "files": [
    "README.md",
    "LICENSE.md",
    "cjs/croquet-croquet.js",
    "cjs/croquet-croquet-node.js",
    "pub/croquet.min.js",
    "types.d.ts"
  ],
  "scripts": {
    "start": "npm run watch",
    "watch": "npm-watch build-dev",
    "start-node": "npm-watch build-dev-node",
    "build-dev": "rollup -c --environment NODE_ENV:development",
    "build-dev-node": "rollup -c --environment NODE_ENV:development --environment CROQUET_PLATFORM:node",
    "build-prod": "rollup -c --environment NODE_ENV:production",
    "build-prod-node": "rollup -c --environment NODE_ENV:production --environment CROQUET_PLATFORM:node",
    "prepublishOnly": "npm run clean ; sed -i '' 's,//# sourceMappingURL.*,,' cjs/*.js pub/*.js",
    "clean": "rm -f cjs/* pub/* ; git checkout cjs/ pub/ package-lock.json ; npm ci"
  },
  "watch": {
    "build-dev": {
      "patterns": [
        ".",
        "../../../teatime",
        "../../../math"
      ],
      "ignore": [
        "./cjs",
        "./pub"
      ],
      "extensions": "js,json",
      "quiet": false
    },
    "build-dev-node": {
      "patterns": [
        ".",
        "../../../teatime",
        "../../../math"
      ],
      "ignore": [
        "./cjs",
        "./pub"
      ],
      "extensions": "js,json",
      "quiet": false
    }
  },
  "author": "Croquet Corporation",
  "license": "SEE LICENSE.md",
  "unpkg": "pub/croquet.min.js",
  "jsdelivr": "pub/croquet.min.js",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.1",
    "dotenv-flow": "^3.2.0",
    "magic-string": "^0.25.7",
    "moment": "^2.29.1",
    "npm-watch": "^0.11.0",
    "regenerator-runtime": "^0.13.9",
    "rollup": "^2.58.0",
    "rollup-plugin-license": "^2.6.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-web-worker-loader": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
