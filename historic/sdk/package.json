{
  "name": "croquet",
  "version": "0.0.4",
  "description": "",
  "main": "croquet.js",
  "scripts": {
    "start": "parcel watch --no-hmr --public-url . --global Croquet -o croquet.min.js croquet.js",
    "build": "parcel build --public-url . --global Croquet -o croquet.min.js croquet.js",
    "buildx": "parcel build --experimental-scope-hoisting --public-url . --global Croquet -o croquet.min.js croquet.js",
    "deploy": "./deploy.sh",
    "build-docs": "jsdoc -c jsdoc.json -d build",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "../teatime",
        "../util"
      ],
      "extensions": "js,json",
      "quiet": false
    },
    "build-docs": {
      "patterns": [
        ".",
        "../teatime"
      ],
      "ignore": [
        "build",
        "dist"
      ],
      "extensions": "js,json,html,css,tmpl,md",
      "quiet": false
    }
  },
  "author": "Croquet Studios",
  "license": "ISC",
  "browserslist": [
    "> 5%"
  ],
  "dependencies": {
    "@croquet/teatime": "file:../teatime"
  },
  "devDependencies": {
    "jsdoc": "^3.6.2",
    "npm-watch": "^0.6.0",
    "parcel": "^1.12.3"
  }
}
