{
  "name": "croquet",
  "version": "0.3.3-6",
  "description": "Croquet SDK Documentation and all-in-one JS bundle",
  "main": "sdk.js",
  "scripts": {
    "start": "npm-watch",
    "build-lib": "NODE_ENV=development parcel build --public-url . --global Croquet -o croquet-dev-bundled.js sdk.js",
    "build-docs": "jsdoc -c jsdoc.json -d build",
    "deploy": "./deploy.sh",
    "watch": "npm-watch"
  },
  "watch": {
    "build-lib": {
      "patterns": [
        "../libraries/packages/croquet"
      ],
      "extensions": "js,json",
      "quiet": false
    },
    "build-docs": {
      "patterns": [
        ".",
        "../teatime"
      ],
      "ignore": [
        "build",
        "dist"
      ],
      "extensions": "js,json,html,css,tmpl,md",
      "quiet": false
    }
  },
  "author": "Croquet Corporation",
  "license": "ISC",
  "browserslist": [
    "> 0.25%"
  ],
  "dependencies": {
    "@croquet/croquet": "file:../libraries/packages/croquet"
  },
  "devDependencies": {
    "jsdoc": "^3.6.5",
    "npm-watch": "^0.7.0",
    "parcel": "^1.12.4"
  }
}
