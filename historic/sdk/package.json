{
  "name": "croquet",
  "version": "0.0.3",
  "description": "",
  "main": "croquet.js",
  "scripts": {
    "start": "parcel watch --no-hmr --public-url . --global Croquet -o croquet.min.js croquet.js",
    "deploy": "parcel build --public-url . --global Croquet -d ../../servers/croquet.studio/sdk -o croquet-0.0.3.min.js croquet.js",
    "deployx": "parcel build --experimental-scope-hoisting --public-url . --global Croquet -o croquet.min.js croquet.js",
    "build-docs": "jsdoc -c jsdoc.json -a public -u tutorials -d ../../servers/croquet.studio/sdk/docs",
    "watch": "npm-watch"
  },
  "watch": {
    "build-docs": {
      "patterns": [
        ".",
        "../teatime",
        "tutorials",
        "../thirdparty-patched/docdash"
      ],
      "extensions": "js,json,html,css,tmpl,md",
      "quiet": false
    }
  },
  "author": "Croquet Studios",
  "license": "ISC",
  "browserslist": [
    "> 5%"
  ],
  "dependencies": {
    "@croquet/teatime": "file:../teatime"
  },
  "devDependencies": {
    "jsdoc": "^3.6.2",
    "npm-watch": "^0.6.0",
    "parcel": "^1.12.3"
  }
}
